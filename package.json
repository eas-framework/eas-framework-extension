{
    "name": "eas-framework-extension",
    "publisher": "ido-s",
    "displayName": "Eas-Framework",
    "description": "Eas-Framework Syntax highlight",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0",
        "node": "14"
    },
    "scripts": {
        "build": "vsce package"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
              "id": "eas-framework",
              "extensions": [".mode", ".inte", ".page"]
            }
        ],
        "snippets": [
			{
				"language": "html",
				"path": "./snippets/snippets.json"
			}
		],
        "grammars": [{
                "scopeName": "text.html.eas-framework",
                "path": "./syntaxes/eas-framework.tmLanguage.json",
                "injectTo": [
					"text.html"
				],
                "embeddedLanguages": {
					"meta.embedded.block.eas-framework": "eas-framework",
					"meta.embedded.block.javascript": "source.js",
                    "meta.embedded.block.typescript": "source.ts"

				}
            }
        ],
        "configurationDefaults": {
			"emmet.includeLanguages": {
				"eas-framework": "html"
			}
		}
    },
    "repository": {
        "url": "git@gitlab.com:ido.pluto/eas-framework-extension.git"
    }
}